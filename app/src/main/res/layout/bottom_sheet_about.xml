<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheets"
    android:layoutDirection="rtl">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_remove_24"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin16"
        android:layout_marginRight="@dimen/margin16"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginTop="@dimen/margin32"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primaryLightColor"
            android:textSize="@dimen/h" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h2"
            android:text="@string/about_text"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16"
            android:text="@string/if_you_are_developer_be_free_to_lookout_source"
            android:textSize="@dimen/h2"
            android:textColor="@color/primaryDarkColor"/>
        <TextView
            android:id="@+id/app_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/github"
            android:textSize="@dimen/h2"
            android:layout_marginTop="@dimen/margin8"
            android:textColor="@color/blue_color_picker"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>